                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_17"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_18"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

            </LinearLayout>
            <!--forth row of Albums recently added-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_19"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_20"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_21"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_22"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_23"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_24"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

            </LinearLayout>
            <!--fifth row of Albums recently added-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_25"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_26"
