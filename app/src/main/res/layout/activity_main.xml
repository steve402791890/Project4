                </LinearLayout>

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_27"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_28"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

                <LinearLayout style="@style/catalog_content_linear_view">

                    <ImageView
                        android:id="@+id/main_activity_local_song_cover_29"
                        style="@style/content_front_cover"
                        android:src="@drawable/music2_icon" />

                    <TextView
                        android:id="@+id/main_activity_local_song_name_30"
                        style="@style/content_subtitle"
                        android:text="@string/subtitle_local_other" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--Song Playing Now Bottom Bar-->
    <RelativeLayout
        android:id="@+id/main_activity_song_playing_now"
        style="@style/song_playing_now_bottom_bar">
        <!--song cover-->
        <ImageView
            android:id="@+id/main_activity_song_playing_now_muisc_icon"
            style="@style/song_playing_now_music_icon"
            android:src="@drawable/music_icon" />
        <!--android:layout_toRightOf="@id/last_song_activity_song_playing_now_muisc_icon"-->
        <!--title detail of the song-->
        <LinearLayout style="@style/song_playing_now_linear_view">

            <TextView
                android:id="@+id/main_activity_song_playing_now_song_name"
                style="@style/song_playing_now_song_name"
                android:text="@string/last_song_activity_song_playing_now_song_name" />

            <TextView
                android:id="@+id/main_activity_song_playing_now_singer"
                style="@style/song_playing_now_singer"
                android:text="@string/last_song_activity_song_playing_now_singer" />
        </LinearLayout>
        <!--image of the play or pause-->
        <ImageView
            android:id="@+id/main_activity_song_playing_now_pause_icon"
            style="@style/song_playing_now_pause_icon"
            android:src="@drawable/pause_icon" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
